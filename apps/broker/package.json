{
  "name": "broker",
  "private": true,
  "description": "Broker for agent control",
  "scripts": {
    "build": "cd ../../ && swc apps/broker/src --out-dir=dist",
    "typecheck": "tsc",
    "start:dev": "cd ../../ && SWCRC=true node -r @swc-node/register --enable-source-maps apps/broker/src/main.ts",
    "start:prod": "cd ../../ && node --enable-source-maps dist/apps/broker/src/main.js",
    "lint": "eslint src",
    "format": "cd ../../ && prettier --check apps/broker/src",
    "watch": "nodemon --watch src --exec \"concurrently npm:start:dev npm:typecheck\" --config ../../nodemon.json"
  }
}
