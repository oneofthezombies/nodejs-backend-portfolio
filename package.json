{
  "name": "nodejs-backend-portfolio",
  "version": "0.0.0",
  "private": true,
  "description": "Node.js backend portfolio",
  "license": "MIT",
  "author": "oneofthezombies",
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "broker:build": "swc apps/broker/src libs/auth/src --out-dir=dist/apps/broker --delete-dir-on-start",
    "broker:check:format": "prettier --check \"apps/broker/src/**/*.ts\" \"libs/auth/src/**/*.ts\"",
    "broker:check:lint": "eslint apps/broker/src",
    "broker:check:type": "tsc --project apps/broker/tsconfig.json",
    "broker:start:dev": "SWCRC=true node --import @swc-node/register/esm-register --enable-source-maps apps/broker/src/main.ts",
    "broker:start:prod": "node --enable-source-maps dist/apps/broker/apps/broker/src/main.js",
    "broker:watch": "nodemon --watch apps/broker/src --watch libs/auth/src --exec \"npx concurrently --kill-others-on-fail npm:broker:start:dev npm:broker:check:type npm:broker:check:lint npm:broker:check:format\""
  },
  "nodemonConfig": {
    "delay": "500",
    "ext": "ts",
    "ignore": [
      "dist",
      "node_modules"
    ]
  },
  "dependencies": {
    "@nestjs/common": "10.3.8",
    "@nestjs/core": "10.3.8",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.3.8",
    "@prisma/client": "5.13.0",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "passport": "0.7.0",
    "passport-http": "0.3.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "10.3.8",
    "@swc-node/register": "1.9.1",
    "@swc/cli": "0.3.12",
    "@swc/core": "1.5.5",
    "@types/bcrypt": "5.0.2",
    "@types/express": "4.17.21",
    "@types/node": "20.12.11",
    "@types/passport-http": "0.3.11",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "prisma": "5.13.0",
    "sort-package-json": "2.10.0",
    "supertest": "7.0.0",
    "typescript": "5.4.5"
  }
}
